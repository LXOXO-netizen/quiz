<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Bingo Winners</title>
  <style>
    body {
      font-family: 'Lato', sans-serif;
      text-align: center;
      padding: 2rem;
      background: #f5f5f5;
    }
    h1 {
      margin-bottom: 1rem;
    }
    #spinner {
      font-size: 2.5rem;
      height: 3rem;
      margin: 1.5rem 0;
      color: #2e7d32;
      font-weight: bold;
    }
    #status {
      font-size: 1.25rem;
      margin-top: 1rem;
      color: #555;
    }
  </style>
</head>
<body>
  <h1>ðŸŽ‰ Bingo Draw â€“ Pick 3 Winners ðŸŽ‰</h1>
  <p>Press <strong>Enter</strong> to spin and pick a winner!</p>
  <div id="spinner">Press Enter to begin...</div>
  <div id="status"></div>

  <script>
    const results = <%- JSON.stringify(results) %>;
    const names = Object.keys(results);
    let picked = [];

    const spinner = document.getElementById("spinner");
    const status = document.getElementById("status");

    function spinAndPickWinner() {
      if (picked.length >= 3 || names.length === 0) {
        spinner.textContent = "ðŸŽŠ All winners drawn!";
        status.textContent = "Auto-resetting in 5 seconds...";
        setTimeout(() => {
          picked = [];
          spinner.textContent = "Press Enter to begin again...";
          status.textContent = "";
        }, 5000);
        return;
      }

      const remaining = names.filter(name => !picked.includes(name));
      if (remaining.length === 0) return;

      let spinInterval;
      let spinIndex = 0;

      // Start spinning through remaining names
      spinInterval = setInterval(() => {
        spinner.textContent = remaining[spinIndex % remaining.length];
        spinIndex++;
      }, 50); // Fast spin

      // Stop after 2 seconds and pick a winner
      setTimeout(() => {
        clearInterval(spinInterval);
        const winner = remaining[Math.floor(Math.random() * remaining.length)];
        picked.push(winner);
        spinner.textContent = `ðŸŽ¯ Winner ${picked.length}: ${winner}`;
        status.textContent = picked.length < 3
          ? "Press Enter for next winner..."
          : "ðŸŽŠ All winners drawn! Auto-reset in 5 seconds...";
        
        if (picked.length >= 3) {
          setTimeout(() => {
            picked = [];
            spinner.textContent = "Press Enter to begin again...";
            status.textContent = "";
          }, 60000);
        }
      }, 2000);
    }

    document.addEventListener("keydown", function (e) {
      if (e.key === "Enter") {
        spinAndPickWinner();
      }
    });
  </script>
</body>
</html>
