<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Quiz App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link href="./styles.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
<h1>openSUSE Quiz Leaderboard</h1>
<table class="results">
  <thead>
    <tr><th>Nickname</th><th>Correct</th><th>Wrong</th></tr>
  </thead>
  <tbody>
  <% Object.keys(results).forEach(function(user) { %>
      <td style="width: 200px;"><%= user %></td>
      <td style="width: 100px;"><%= results[user].correct %></td>
      <td style="width: 100px;"><%= results[user].total %></td>
    </tr>
  <% }); %>
  </tbody>
</table>
</body>
</html>